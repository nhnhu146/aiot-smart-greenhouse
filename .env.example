# =============================================================================
# AIOT Smart Greenhouse System - Clean Environment Configuration
# =============================================================================
# Copy this file to .env and configure your specific values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
PORT=5000
API_PREFIX=/api
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://greenhouse_user:greenhouse_password@localhost:27017/aiot_greenhouse?authSource=admin

# =============================================================================
# MQTT BROKER CONFIGURATION
# =============================================================================
MQTT_BROKER_URL=mqtt://mqtt.noboroto.id.vn:1883
MQTT_HOST=mqtt.noboroto.id.vn
MQTT_PORT=1883
MQTT_USERNAME=vision
MQTT_PASSWORD=vision

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# =============================================================================
# AUTOMATION
# =============================================================================
AUTOMATION_RATE_LIMIT=10

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Vite)
# =============================================================================
VITE_API_URL=http://localhost:5000