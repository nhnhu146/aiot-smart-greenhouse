{
	"name": "aiot-greenhouse-backend",
	"version": "1.0.0",
	"description": "Backend for AIOT Smart Greenhouse System",
	"main": "dist/index.js",
	"scripts": {
		"dev": "nodemon src/index.ts",
		"build": "tsc && node copy-templates.js",
		"start": "node dist/index.js",
		"test": "jest --testTimeout=10000",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/**/*.ts",
		"clean": "rimraf dist",
		"create-admin": "node create-admin.js",
		"build:windows": "tsc && powershell -Command \"if (Test-Path 'dist/templates') { Remove-Item -Path 'dist/templates' -Recurse -Force }; Copy-Item -Path 'src/templates' -Destination 'dist/templates' -Recurse -Force\"",
		"alerts:cleanup": "ts-node src/utils/alertCleanup.ts",
		"alerts:cleanup:build": "yarn build && node dist/utils/alertCleanup.js"
	},
	"keywords": [
		"aiot",
		"greenhouse",
		"backend",
		"mqtt",
		"nodejs",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@css-inline/css-inline": "^0.16.0",
		"@types/socket.io": "^3.0.2",
		"axios": "^1.10.0",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.2",
		"compression": "^1.8.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.16.3",
		"morgan": "^1.10.0",
		"mqtt": "^5.3.4",
		"nodemailer": "^6.9.7",
		"socket.io": "^4.8.1",
		"winston": "^3.11.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.10.5",
		"@types/nodemailer": "^6.4.14",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"jest": "^30.0.5",
		"mongodb-memory-server": "^10.2.0",
		"nodemon": "^3.0.2",
		"rimraf": "^5.0.5",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"<rootDir>/tests/setup.ts"
		],
		"testMatch": [
			"<rootDir>/tests/**/*.test.ts"
		],
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/*.d.ts",
			"!src/index.ts"
		],
		"coverageDirectory": "coverage",
		"coverageReporters": [
			"text",
			"lcov",
			"html"
		]
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}